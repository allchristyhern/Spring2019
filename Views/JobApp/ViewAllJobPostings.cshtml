@model IEnumerable<GetJobsv3.Models.Job>
@{
    ViewBag.Title = "Powers Painting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
        <div id="careers" class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="marg25 service-name">
                        <p>Job Openings</p>
                        <table class="table table-responsive table-bordered">

                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.JobTitle)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Details" , "Details" , new { id = item.jobID })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
>

